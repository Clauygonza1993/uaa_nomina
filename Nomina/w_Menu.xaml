<Window x:Class="Nomina.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nomina"
        mc:Ignorable="d"
        Title="Menu" WindowState="Maximized">

    <Menu Name="MenuPrincipal">
        <MenuItem Header="Opciones">
            <MenuItem Header="Empleados" Name="MenuClientes" Click="MenuClientes_Click" />
            <MenuItem Header="Conceptos" Name="MenuConceptos" Click="MenuConceptos_Click" />
            <MenuItem Header="Turno" Name="MenuTurno" Click="MenuTurno_Click" />
            <MenuItem Header="Visor Reportes" Name="MenuReport" Click="MenuReport_Click" />
            <Separator />
            <MenuItem Header="Generar Liquidación" Name="MenuLiquidaciones" Click="MenuLiquidaciones_Click" />
            <MenuItem Header="Liquidaciones Generadas" Name="MenuLiquidacionesGeneradas" Click="MenuLiquidacionesGeneradas_Click" />
            <Separator />
            <MenuItem Header="Salir" Name="MenuSalir" Click="MenuSalir_Click" />
        </MenuItem>
    </Menu>


</Window>
